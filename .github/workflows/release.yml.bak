name: Release

on:
  push:
    tags:
      - 'v*'

jobs:
  release:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Install Rust (stable)
        uses: actions-rs/toolchain@v1
        with:
          toolchain: stable
          override: true

      - name: Build & test all crates
        run: |
          set -euo pipefail
          for m in crates/*/Cargo.toml; do
            echo "==> Testing $m"
            cargo test --manifest-path "$m"
          done

      - name: Make dist script executable
        run: chmod +x scripts/dist.sh

      - name: Create dist tarball
        env:
          TAG: ${{ github.ref_name }}
        run: |
          ./scripts/dist.sh "${TAG}"
          echo "Artifacts:"
          ls -lh network_scanner-*.tar.gz || true

      - name: Generate SHA256 (safety)
        run: |
          TAR=$(ls network_scanner-*.tar.gz | head -n1)
          if [ -n "$TAR" ]; then
            if command -v sha256sum >/dev/null 2>&1; then
              sha256sum "$TAR" > "${TAR}.sha256"
            else
              shasum -a 256 "$TAR" > "${TAR}.sha256"
            fi
            echo "Generated: ${TAR}.sha256"
          else
            echo "No tarball found"
            exit 1
          fi

      - name: Create GitHub Release
        id: create_release
        uses: actions/create-release@v1
        with:
          tag_name: ${{ github.ref_name }}
          release_name: ${{ github.ref_name }}
          draft: false
          prerelease: false
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}

      - name: Upload tarball to release
        uses: actions/upload-release-asset@v1
        with:
          upload_url: ${{ steps.create_release.outputs.upload_url }}
          asset_path: ./network_scanner-${{ github.ref_name }}.tar.gz
          asset_name: network_scanner-${{ github.ref_name }}.tar.gz
          asset_content_type: application/gzip
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}

      - name: Upload sha256 to release
        uses: actions/upload-release-asset@v1
        with:
          upload_url: ${{ steps.create_release.outputs.upload_url }}
          asset_path: ./network_scanner-${{ github.ref_name }}.tar.gz.sha256
          asset_name: network_scanner-${{ github.ref_name }}.tar.gz.sha256
          asset_content_type: text/plain
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}

